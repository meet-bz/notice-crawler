{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "terminate-next",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": ["dev", "--port", "3000"],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}